<% if @user %>
	<% if @user.valid? %>
		window.location.replace("<%= root_path %>");
	<% else %>
		<% if @user.errors.any? %>
			var s = '';
		    <% @user.errors.full_messages.each do |msg| %>
		      s += <%= msg %> + '\n'
		    <% end %>
		    alert(s);
		<% end %>
	<% end %>
<% elsif @error == 1%>
	alert("Username used!")
<% elsif @error == 2%>
	alert("Password doesn't match with confirmation!")
<% else %>
	alert('An error occured!')
<% end %>