<div id="messages-area" style="padding-left: 20px; padding-right: 20px;">
	<% @messages.each do |message| %>
			<div class="message-box <%= message.id %>">
				<span class="message-sender"><%= message.user.first_name + ' says:' %></span>
				<span class="message-body" style="display: flex"><%= message.body %></span>
			</div>
	<% end %>
</div>